{# templates/depense/index.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Liste des Dépenses</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Liste des Dépenses</h1>
        <a href="{{ path('depense_new') }}" class="btn btn-primary">Ajouter une dépense</a>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Date de Dépense</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for depense in depenses %}
                    <tr>
                        <td>{{ depense.title }}</td>
                        <td>{{ depense.amount }}</td>
                        <td>{{ depense.date|date('d/m/Y H:i') }}</td>
                        <td>{{ depense.category }}</td>
                        <td>
                            <a href="{{ path('depense_edit', { 'id': depense.id }) }}" class="btn btn-warning">Modifier</a>
                            <form action="{{ path('depense_delete', { 'id': depense.id }) }}" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>
